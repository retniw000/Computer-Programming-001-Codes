#include <stdio.h>

int main() {

    int a;
    int n1;
    int n2;
    int n3;
    int ageIn;
    int sumx2;
    int hour;
    int second;
    int minute;
    int result;

    char name[80];
    char gender;
    char bruh;

    while (1) {
        printf("MENU PROGRAM\n");
        printf("\t1. Smiley\n");
        printf("\t2. Platos Theory\n");
        printf("\t3. Seconds\n");
        printf("\t4. Exit\n");

        do {
            printf("Enter the number of the program you want to execute (If you want to return to the menu, input 0): ");
            scanf("%d", &a);

            if (a == 0) {
                printf("MENU PROGRAM\n");
                printf("\t1. Smiley\n");
                printf("\t2. Platos Theory\n");
                printf("\t3. Seconds\n");
                printf("\t4. Exit\n");
            }

            if (a == 1) {
                printf("\nPlease enter your name:\n");
                scanf("%s", name);
                printf("Please enter a number:\n");
                scanf("%d", &n1);
                printf("Please enter a second number:\n");
                scanf("%d", &n2);
                printf("Please enter a third number:\n");
                scanf("%d", &n3);
                sumx2 = (n1 + n2 + n3) * 2;
                printf("\n%s, twice the sum of your numbers %d, %d, %d is %d :):):)\n", name, n1, n2, n3, sumx2);
            }

            if (a == 2) {
                printf("\nPlease input your age:\n");
                scanf("%d", &ageIn);
                printf("Please input your gender (M/F):\n");
                scanf(" %c", &gender);
                if (gender == 'm' || gender == 'M') {
                    result = ageIn / 2 + 7;
                    printf("\nYour ideal partner's age is: %d years old\n", result);
                } else if (gender == 'f' || gender == 'F') {
                    result = (ageIn - 7) * 2;
                    printf("\nYour ideal partner's age is: %d years old\n", result);
                } else {
                    printf("\nInvalid gender input. Please enter M or F.\n");
                }
            }

            if (a == 3) {
                int ninput, sec, min, hour;
                printf("\nPlease enter your name:\n");
                scanf("%s", name);
                printf("Enter seconds:\n");
                scanf("%d", &ninput);

                hour = ninput / 3600;
                min = (ninput % 3600) / 60;
                sec = ninput % 60;

                printf("\n%s, you entered %d seconds:\n", name, ninput);
                printf("Time: %02d:%02d:%02d (HH:MM:SS)\n", hour, min, sec);
            }

            if (a == 4) {
                printf("Are you sure? (y/n): ");
                scanf(" %c", &bruh);

                if (bruh == 'n' || bruh == 'N') {
                    break;
                }

                if (bruh == 'y' || bruh == 'Y') {
                    printf("Are you really sure? (y/n): ");
                    scanf(" %c", &bruh);

                    if (bruh == 'n' || bruh == 'N') {
                        break;
                    }

                    if (bruh == 'y' || bruh == 'Y') {
                        printf("Program ended.\n");
                        return 0;
                    }
                }
            }

        } while (a != 4);
    }

    return 0;
}
