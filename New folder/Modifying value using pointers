#include <stdio.h>

int main(){


int array[5] = {2,4,6,8,10};

int *ptr;
ptr = array;

printf("This is your original array:\n");
for (int a=0;a<5;a++){
    printf("%d ", *(ptr+a));  
}
printf("\n");
printf("\n");

for (int a=0;a<5;a++){
	*(ptr+a) = *(ptr+a)*2;
}


printf("This is your modified array:\n");
for (int a=0;a<5;a++){
    printf("%d ", *(ptr+a));  
}






    return 0;
}
